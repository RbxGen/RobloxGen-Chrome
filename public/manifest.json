{
	"name": "RobloxGen",
    "description": "Chrome extension for RobloxGen",
	"version": "2.0.0",
	"manifest_version": 3,
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "popup.html"
	},
    "permissions": [
        "cookies",
		"storage"
    ],
	"host_permissions": [
        "*://*.roblox.com/"
    ],
    "options_ui": {
		"page": "options.html",
		"open_in_tab": false
	},
	"icons": {
		"16": "logo128.png",
		"48": "logo128.png",
		"128": "logo128.png"
	}
}
